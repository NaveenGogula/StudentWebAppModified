@model StudentWebApp.Models.Models.Entities.Student

<h1>Edit Student</h1>


@if (Model is null)
{
    <p>No student found with this Id</p>
}

else
{

<form method="post">

        <input asp-for="@Model.StudentId" hidden/>

   @*  <div class="mt-3">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly/>
    </div> *@

    <div class="mt-3">
        <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="text" class="form-control" asp-for="Email" />
    </div>

    <div class="mt-3">
        <label class="form-label">Phone</label>
        <input type="text" class="form-control" asp-for="Phone" />
    </div>

    <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="Subscribed" asp-for="Subscribed" />
        <label class="form-check-label" for="Subscribed">Subscribed</label>
    </div>

        <div class="container mt-3">
            <div class="row">
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Students">Delete</button>
                </div>
                <div class="col-auto">
                    <a class="btn btn-primary" asp-controller="Students" asp-action="Add">Back</a>
                </div>
            </div>
        </div>
   
</form>

}